{
  "name": "@fwdslsh/inform",
  "version": "0.0.10",
  "description": "A high-performance web crawler powered by Bun that downloads pages and converts them to Markdown",
  "type": "module",
  "main": "src/cli.js",
  "bin": {
    "inform": "./src/cli.js"
  },
  "scripts": {
    "start": "bun src/cli.js",
    "dev": "bun --watch src/cli.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "bun build src/cli.js --compile --outfile=inform",
    "build:all": "npm run build:linux && npm run build:macos && npm run build:windows",
    "build:linux": "bun build src/cli.js --compile --target=linux-x64 --outfile=inform-linux-x86_64",
    "build:macos": "bun build src/cli.js --compile --target=darwin-x64 --outfile=inform-darwin-x86_64",
    "build:windows": "bun build src/cli.js --compile --target=windows-x64 --outfile=inform-windows-x86_64.exe",
    "clean": "rm -f inform inform-* *.exe",
    "docker:build": "docker build -t fwdslsh/inform .",
    "docker:run": "docker run --rm fwdslsh/inform",
    "docker:test": "docker run --rm fwdslsh/inform https://example.com --dry-run",
    "release:prepare": "npm run clean && npm run test && npm run build:all"
  },
  "keywords": [
    "crawler",
    "web-scraping",
    "markdown",
    "cli",
    "bun",
    "performance"
  ],
  "author": "",
  "license": "CC-BY-4.0",
  "dependencies": {
    "jsdom": "^24.0.0",
    "minimatch": "^10.0.3",
    "turndown": "^7.1.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
