{
  "name": "@fwdslsh/inform",
  "version": "0.1.6",
  "description": "A high-performance web crawler powered by Bun that downloads pages and converts them to Markdown",
  "type": "module",
  "main": "src/cli.js",
  "bin": {
    "inform": "./src/cli.js"
  },
  "scripts": {
    "start": "bun src/cli.js",
    "dev": "bun --watch src/cli.js",
    "test": "bun test",
    "bench": "bun benchmarks/index.js",
    "bench:save": "bun benchmarks/index.js --save",
    "bench:crawl": "bun benchmarks/crawl-benchmark.js",
    "bench:parsing": "bun benchmarks/html-parsing-benchmark.js",
    "build": "bun build src/cli.js --compile --outfile=inform",
    "build:all": "npm run build:linux && npm run build:macos && npm run build:windows",
    "build:linux": "bun build src/cli.js --compile --outfile=inform-linux-x86_64",
    "build:macos": "bun build src/cli.js --compile --outfile=inform-darwin-x86_64",
    "build:windows": "bun build src/cli.js --compile --outfile=inform-windows-x86_64.exe",
    "clean": "rm -f inform inform-* *.exe",
    "docker:build": "docker build -t fwdslsh/inform .",
    "docker:run": "docker run --rm fwdslsh/inform",
    "docker:test": "docker run --rm fwdslsh/inform https://example.com --dry-run",
    "release:prepare": "npm run clean && npm run test && npm run build:all"
  },
  "keywords": [
    "crawler",
    "web-scraping",
    "markdown",
    "cli",
    "bun",
    "performance"
  ],
  "author": "fwdslsh",
  "license": "CC-BY-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fwdslsh/inform.git"
  },
  "bugs": {
    "url": "https://github.com/fwdslsh/inform/issues"
  },
  "homepage": "https://github.com/fwdslsh/inform#readme",
  "dependencies": {
    "minimatch": "^10.0.3",
    "turndown": "^7.1.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
